<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_FBFBFB"
    android:orientation="vertical">

    <com.aotuo.h3officeplat.view.TitleView
        android:id="@+id/title_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:centerTitle="@string/server_address"
        app:rightTitle="@string/save" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_FFFFFF">

        <ImageView
            android:id="@+id/iv_delete_server"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/dp_15"
            android:src="@drawable/icon_delete"
            android:visibility="invisible"/>

        <EditText
            android:id="@+id/et_serve_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/dp_48"
            android:layout_toLeftOf="@id/iv_delete_server"
            android:background="@null"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_12"
            android:textColor="@color/color_2C3038"
            android:textSize="@dimen/sp_16" />

    </RelativeLayout>


</LinearLayout>