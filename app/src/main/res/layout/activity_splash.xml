<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_splash"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/icon_launcher" />

    <ViewFlipper
        android:id="@+id/vf_welcome"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/guidance1" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/guidance2" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/guidance3" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/guidance4" />

            <TextView
                android:id="@+id/tv_next"
                android:layout_width="@dimen/dp_130"
                android:layout_height="@dimen/dp_38"
                android:text="@string/now_experience"
                android:background="@drawable/btn_splash_next"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/dp_40"
                android:textColor="@color/color_FFFFFF"
                android:textSize="@dimen/sp_16"
                android:gravity="center"/>

        </RelativeLayout>

    </ViewFlipper>

    <TextView
        android:id="@+id/tv_jump"
        android:layout_width="@dimen/dp_49"
        android:layout_height="@dimen/dp_22"
        android:text="@string/jump"
        android:background="@drawable/btn_splash_jump"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_18"
        android:layout_marginTop="@dimen/dp_27"
        android:textColor="@color/color_FFFFFF"
        android:textSize="@dimen/sp_13"
        android:gravity="center"
        android:visibility="gone"/>

</RelativeLayout>